<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokeball"
    tools:context=".DetailPokemonActivity">

    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="42dp"
        android:layout_marginTop="251dp"
        app:cardBackgroundColor="@color/beige"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPokemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                tools:text="Pikachu"/>

            <TextView
                android:id="@+id/tvPokemonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="italic"
                tools:text="Nº Pokedex: 25"/>

            <TextView
                android:id="@+id/tvTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="21sp"
                tools:text="Types: Electric"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="46dp"
                android:text="Estadísticas"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="44dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <!-- GRAFICAS (Estadísticas) -->
                <View
                    android:id="@+id/viewHP"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/p_stat_1"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/viewAttack"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/p_stat_2"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/viewDefense"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/p_stat_3"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/viewAttackS"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/p_stat_4"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/viewDefenseS"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/p_stat_5"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/viewSpeed"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/p_stat_6"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:singleLine="true"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:text="HP"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="Attack"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="Defense"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="Attack-S"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="Defense-S"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="4dp"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="Speed"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:text="Sprites"/>

            <!-- ImageView para las imágenes del Pokémon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="46dp">

                <ImageView
                    android:id="@+id/ivPokemonFront"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Front Image"/>

                <ImageView
                    android:id="@+id/ivPokemonBack"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Front Image"/>

                <ImageView
                    android:id="@+id/ivPokemonFrontShiny"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Front Image"/>

                <ImageView
                    android:id="@+id/ivPokemonBackShiny"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Back Image"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:text="Habilidades"/>

            <TextView
                android:id="@+id/tvAb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textSize="21sp"
                tools:text="Habilidad 1"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
