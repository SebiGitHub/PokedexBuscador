<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokeball"
    tools:context=".MainActivity">

    <!-- Título de la Pokedex -->
    <TextView
        android:id="@+id/titlePokedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokédex"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"/>

    <!-- RecyclerView centrado para mostrar Pokémon -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvpokemon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titlePokedex"
        app:layout_constraintBottom_toTopOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/recyclerview_border"/>

    <!-- ProgressBar para indicar carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SearchView más arriba -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:queryHint="Buscar Pokémon"
        android:background="@android:color/white"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:layout_margin="16dp"/>

    <!-- Contenedor de controles -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Cruceta (D-Pad) -->

        <!-- Botones A, B, X, Y en forma de cruz y más separados -->

        <android.widget.ImageView
            android:id="@+id/dpad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/dpad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/dpad2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:rotation="90"
            android:src="@drawable/dpad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.widget.Button
            android:id="@+id/btnA"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_round"
            android:text="A"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/btnB"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.widget.Button
            android:id="@+id/btnB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_round"
            android:text="B"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnA" />

        <android.widget.Button
            android:id="@+id/btnX"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_round"
            android:text="X"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/btnA"
            app:layout_constraintTop_toTopOf="@id/btnA" />

        <android.widget.Button
            android:id="@+id/btnY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_round"
            android:text="Y"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/btnB"
            app:layout_constraintEnd_toStartOf="@id/btnB" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
